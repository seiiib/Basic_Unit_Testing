<!DOCTYPE html>
<html lang="en">
  <head>
      <% include partials/head %>
  </head>
  <body class="container">

      <div id="form">
          <p>Please Signup</p>
            <hr/>
              <form action="/signup" method="post">
                  <div class="form-group">
                    <label for="form_firstname">Firstname</label>
                    <input id="form_firstname" type="text" name="firstname" />
                  </div>
                  <div class="form-group">
                    <label for="form_lastname">Lastname</label>
                    <input id="form_lastname" type="text" name="lastname" />
                  </div>
                  <div class="form-group">
                    <label for="form_password">Password</label>
                    <input id="form_password" type="password" name="password" />
                  </div>
                  <div class="form-group">
                    <label for="form_confirm_password">Confirm Password</label>
                    <input id="form_confirm_password" type="confirm_password" name="confirm_password" />
                  </div>
                  <button class="btn btn-primary btn-block" type="submit" value="Submit">Create</button>
              </form>
                <hr/>
            <button class="btn btn-success btn-block" type="submit" href="/login" onClick='document.location.href="/login"'>
              Cancel
            </button>
        </div>
    
  </body>
</html>

